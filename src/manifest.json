{
    "manifest_version": 2,
    "name": "Yandex Music Fisher",
    "description": "Скачивание музыки с сервиса Яндекс.Музыка",
    "version": "0.3.0",
    "permissions": [
        "tabs",
        "storage",
        "downloads",
        "notifications",
        "*://*/*"
    ],
    "minimum_chrome_version": "31.0",
    "background": {
        "scripts": ["js/logger.js", "js/utils.js", "js/yandex_api.js", "js/storage.js", "js/downloader.js", "js/background.js"],
        "persistent": true
    },
    "options_page": "options/options.html",
    "browser_action": {
        "default_title": "Yandex Music Fisher",
        "default_popup": "popup/popup.html",
        "default_icon": "img/icon.png"
    },
    "icons": {
        "16": "img/icon.png",
        "32": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    }
}
