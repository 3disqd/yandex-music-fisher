{
    "manifest_version": 2,
    "name": "Yandex Music Fisher",
    "description": "Скачивание музыки с сервиса Яндекс.Музыка",
    "version": "1.0.2",
    "permissions": [
        "tabs",
        "storage",
        "downloads",
        "https://music.yandex.ru/",
        "https://music.yandex.ua/",
        "https://music.yandex.kz/",
        "https://music.yandex.by/",
        "https://avatars.yandex.net/",
        "https://storage.mds.yandex.net/",
        "https://raw.githubusercontent.com/"
    ],
    "minimum_chrome_version": "31.0",
    "background": {
        "scripts": [
            "vendor/md5.min.js",
            "js/utils.js",
            "js/yandex_api.js",
            "js/storage.js",
            "js/downloader.js",
            "js/background.js"
        ],
        "persistent": true
    },
    "options_page": "options/options.html",
    "browser_action": {
        "default_title": "Yandex Music Fisher",
        "default_popup": "popup/popup.html",
        "default_icon": "img/black.png"
    },
    "icons": {
        "16": "img/icon.png",
        "32": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    }
}
