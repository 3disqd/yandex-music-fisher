{
    "manifest_version": 2,
    "name": "Yandex Music Fisher",
    "description": "Скачивание музыки с сервиса Яндекс.Музыка",
    "version": "0.2.7",
    "permissions": [
        "tabs",
        "storage",
        "downloads",
        "notifications",
        "https://music.yandex.ru/",
        "https://avatars.yandex.net/"
    ],
    "minimum_chrome_version": "31.0",
    "background": {
        "scripts": ["js/logger.js", "js/utils.js", "js/yandex_api.js", "js/storage.js", "js/downloader.js", "js/background.js"],
        "persistent": true
    },
    "options_page": "options/options.html",
    "page_action": {
        "default_title": "Yandex Music Fisher"
    },
    "icons": {
        "16": "img/icon.png",
        "32": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
